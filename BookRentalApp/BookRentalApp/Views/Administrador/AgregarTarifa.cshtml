@model BookRentalApp.Models.Tarifas
@{
    Layout = "~/Views/Shared/_MenuAdministrador.cshtml";
}
<div id="page-wrapper" class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Agregar tarifa</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form class="form-horizontal" method="post" action="~/Administrador/AgregarTarifa">
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="Nombre">Nombre tarifa:</label>
                                    <div class="col-sm-10 col-lg-6">
                                        <input type="text" class="form-control" name="Nombre" placeholder="Ingrese el nombre de la tarifa" required maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="Tarifa">Tarifa:</label>
                                    <div class="col-sm-10 col-lg-6">
                                        <input type="number" class="form-control" name="Tarifa" placeholder="Ingrese la tarifa de alquiler" required min="0">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Registrar tarifa</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
