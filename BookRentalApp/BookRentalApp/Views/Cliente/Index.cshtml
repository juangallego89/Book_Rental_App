@model List<BookRentalApp.Models.ViewModels.Libro>
@{
    Layout = "~/Views/Shared/_MenuCliente.cshtml";
}
<div class="container" style="margin-top:20px">
    <div class="row">
        @foreach (var Libro in Model)
        {
            <div class="col-sm-12 col-lg-4">
                <div class="thumbnail">
                    <img src="@Libro.Imagen" alt="BookImage" class="img-responsive">
                    <div class="caption">
                        <h3>@Libro.Titulo</h3>
                        <h5>Costo alquiler: 0.00 COP / Día</h5>
                        <p>Autor: @Libro.Autor</p>
                        <p>Categoría: @Libro.Categoria</p>
                        <p>Cantidad disponible: @Libro.Ejemplares</p>
                        @Html.ActionLink("Alquilar", "DetalleLibro", new { IdLibro = @Libro.ID_Libro }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
